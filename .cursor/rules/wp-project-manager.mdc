### Transformers
Location: `src/{Module}/Transformers/{Model}_Transformer.php`

Transformers format data for API responses using League Fractal.

```php
<?php

namespace WeDevs\PM\{Module}\Transformers;

use League\Fractal\TransformerAbstract;
use WeDevs\PM\{Module}\Models\{Model};
use WeDevs\PM\Common\Traits\Resource_Editors;

class {Model}_Transformer extends TransformerAbstract {
    use Resource_Editors;

    protected $defaultIncludes = [ 'creator', 'updater' ];
    protected $availableIncludes = [ 'comments', 'files', 'project' ];

    public function transform( {Model} $item ) {
        $data = [
            'id'          => (int) $item->id,
            'title'       => (string) $item->title,
            'description' => [
                'html'    => pm_get_content( $item->description ),
                'content' => $item->description,
            ],
            'status'      => $item->status,
            'created_at'  => format_date( $item->created_at ),
            'updated_at'  => format_date( $item->updated_at ),
        ];
        
        return apply_filters( 'pm_{module}_transformer', $data, $item );
    }

    public function includeComments( {Model} $item ) {
        return $this->collection( $item->comments, new Comment_Transformer );
    }
    
    public function includeProject( {Model} $item ) {
        return $this->item( $item->project, new Project_Transformer );
    }
}
